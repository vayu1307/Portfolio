@{
    ViewData["Title"] = "Home";
}

<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">

            <!-- LEFT CONTENT -->
            <div class="col-md-6 hero-text">
                <h1 class="hero-title">
                    Hi, I'm <span class="text-primary">Dhruv Parmar</span> 👋
                </h1>

                <h2 class="hero-role">
                    <span id="typed-role"></span>
                </h2>

                <!-- TAGLINE (Option D) -->
                <p class="hero-tagline">
                    Building 
                    <strong>secure, scalable backend systems</strong> with <strong>ASP.NET Core.</strong>
                </p>

                <!-- TECH STACK BADGES (Option C) -->
                <div class="tech-stack mt-4">
                    <span class="tech-badge">C#</span>
                    <span class="tech-badge">ASP.NET Core</span>
                    <span class="tech-badge">MVC</span>
                    <span class="tech-badge">SQL Server</span>
                    <span class="tech-badge">REST API</span>
                </div>

                <div class="hero-buttons mt-4">
                    <a asp-controller="Home" asp-action="Projects"
                       class="btn btn-primary btn-lg me-3">
                        View Projects
                    </a>

                    <a asp-controller="Home" asp-action="Contact"
                       class="btn btn-outline-dark btn-lg">
                        Contact Me
                    </a>
                </div>
            </div>

            <!-- RIGHT CONTENT -->
            <div class="col-md-6 text-center hero-image">
                <img src="~/images/Professional_Image_1.png"
                     alt="Developer Illustration"
                     class="img-fluid floating-img" />
            </div>
       </div>
    </div>
</section>