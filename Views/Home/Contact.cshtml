@model MyPortfolio.Models.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}
<body>
<section class="contact-section">
    <div class="contact-container">

        <p class="contact-subtitle">REACH OUT TO ME</p>
        <h2 class="contact-title">Contact.</h2>

        <form id="contactForm" class="contact-form">

            <label>Name</label>
            <input type="text" name="name" placeholder="Your Name" required />

            <label>Email</label>
            <input type="email" name="email" placeholder="Your Email" required />

            <label>Message</label>
            <textarea name="message" rows="4" placeholder="Do you have anything to say?" required></textarea>
            <button type="submit" class="contact-btn">Send</button>
        </form>

        <p id="successMsg" style="color: green; display: none;">
            Message sent successfully!
        </p>
        <p id="errorMsg" style="color: red; display: none;">
            Failed to send message. Please try again.
        </p>

        <!-- Social Icons -->
        <div class="contact-social">
            <a href="mailto:dpprofessional13@gmail.com" title="Email">
                <i class="fa-solid fa-envelope"></i>
            </a>
            <a href="https://www.linkedin.com/in/dhruv-parmar-467050238" target="_blank" title="LinkedIn">
                <i class="fa-brands fa-linkedin-in"></i>
            </a>
            <a href="https://github.com/vayu1307" target="_blank" title="GitHub">
                <i class="fa-brands fa-github"></i>
            </a>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>

<script>
    (function () {
        emailjs.init("MrXw0QVTthzoSXGJq");
    })();

    document.getElementById("contactForm").addEventListener("submit", function (e) {
        e.preventDefault();

        emailjs.sendForm(
            "service_vayu1307",
            "template_r2p6rhg",
            this
        ).then(function () {
            document.getElementById("successMsg").style.display = "block";
            document.getElementById("errorMsg").style.display = "none";
            document.getElementById("contactForm").reset();
        }, function () {
            document.getElementById("errorMsg").style.display = "block";
            document.getElementById("successMsg").style.display = "none";
        });
    });
</script>
</body>
