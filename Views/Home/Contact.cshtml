@model MyPortfolio.Models.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

<section class="contact-section">
    <div class="contact-container">

        <p class="contact-subtitle">REACH OUT TO ME</p>
        <h2 class="contact-title">Contact.</h2>

        <form asp-action="Send" asp-controller="Contact" method="post" class="contact-form">

            <label>Name</label>
            <input asp-for="Name" placeholder="Enter your name" required />

            <label>Email</label>
            <input asp-for="Email" placeholder="example@gmail.com" required />

            <label>Message</label>
            <textarea asp-for="Message" rows="4" placeholder="Do you have anything to say?" required></textarea>

            <button type="submit" class="contact-btn">Send</button>
        </form>

        <!-- Social Icons -->
        <div class="contact-social">
            <a href="mailto:dpprofessional13@gmail" title="Email">
                <i class="fa-solid fa-envelope"></i>
            </a>
            <a href="https://www.linkedin.com/in/dhruv-parmar-467050238" target="_blank" title="LinkedIn">
                <i class="fa-brands fa-linkedin-in"></i>
            </a>
            <a href="https://github.com/vayu1307" target="_blank" title="GitHub">
                <i class="fa-brands fa-github"></i>
            </a>
        </div>
    </div>
</section>
